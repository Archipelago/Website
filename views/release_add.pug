extends layout

block main
  h1 Add a release for $MOVIE_TITLE
  form(method='post' action='/movie/' + movie_id + '/release').form-horizontal
    .form-group
      label(for='inputReleaseName').control-label.col-sm-3 Name
      .col-sm-8
        input(type='text' name='name' required).form-control#inputReleaseName
    .form-group
      label(for='inputReleaseSize').control-label.col-sm-3 Size
      .col-sm-8
        input(type='text' name='size' required).form-control#inputReleaseSize
    .form-group
      label(for='inputReleaseLanguage').control-label.col-sm-3 Language
      .col-sm-8
        select(name="language" required)#inputReleaseLanguage
          option(value="")
          each e in lists.languages
            option(value=e)=e
    .form-group
      label(for='inputReleaseAudioCodec').control-label.col-sm-3 Audio Codec
      .col-sm-8
        select(name="audio_codec" required)#inputReleaseAudioCodec
          option(value="")
          each e in lists.audioCodecs
            option(value=e)=e
    .form-group
      label(for='inputReleaseVideoCodec').control-label.col-sm-3 Video Codec
      .col-sm-8
        select(name="video_codec" required)#inputReleaseVideoCodec
          option(value="")
          each e in lists.videoCodecs
            option(value=e)=e
    .form-group
      label(for='inputReleaseSource').control-label.col-sm-3 Source
      .col-sm-8
        select(name="source" required)#inputReleaseSource
          option(value="")
          each e in lists.sources
            option(value=e)=e
    .form-group
      label(for='inputReleaseQuality').control-label.col-sm-3 Quality
      .col-sm-8
        select(name="quality" required)#inputReleaseQuality
          option(value="")
          each e in lists.qualities
            option(value=e)=e
    .form-group
      label(for='inputReleaseContainer').control-label.col-sm-3 Container
      .col-sm-8
        select(name="container" required)#inputReleaseContainer
          option(value="")
          each e in lists.containers
            option(value=e)=e
    .form-group
      label(for='inputReleaseCompression').control-label.col-sm-3 Compression
      .col-sm-8
        select(name="compression")#inputReleaseCompression
          option(value="")
          each e in lists.compressions
            option(value=e)=e
    .form-group
      label(for='inputReleaseInformations').control-label.col-sm-3 Other informations
      .col-sm-8
        textarea(rows='2', cols='30' name='informations').form-control#inputReleaseInformations
    .form-group(style='text-align: center')
      button(type='submit').btn.btn-default Add release
