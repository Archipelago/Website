doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1')
    title Archipelago
    link(rel='stylesheet' href='libs/bootstrap.min.css')
    script(src='/libs/jquery-2.2.4.min.js')
    script(src='/libs/bootstrap.min.js')
  body
    nav.navbar.navbar-default
      .container-fluid
        .navbar-header
          button.navbar-toggle(type='button' data-toggle='collapse' data-target='#navbar')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Archipelago
        .collapse.navbar-collapse#navbar.navbar-right
          ul.nav.navbar-nav
            li
              a(href='#') First link
            li
              a(href='#') Second link
            li
              a(href='#') Third link
            li
              a(href='#') Fourth link
    .container-fluid
      if error
        .row
          .col-md-6.col-md-offset-1
            .alert.alert-danger(role='alert')
              button(type='button' data-dismiss='alert' aria-label='Close').close &times;
              =error
      if notice
        .row
          .col-md-6.col-md-offset-1
            .alert.alert-success(role='alert')
              button(type='button' data-dismiss='alert' aria-label='Close').close &times;
              =notice
      .row
        main.col-md-8
          block main
        .col-md-4
          .row
            #right.col-md-12
              block right
          .row
            #bottom.col-md-12
              block bottom
