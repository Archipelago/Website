extends layout

block main
  h1(style='text-align: center')=__('Add a movie')
  form(method='post' action='/movie').form-horizontal.row
    .col-sm-10.col-sm-offset-1
      h4=__('Mandatory fields')
      hr
    .form-group
      label(for='inputMovieTitle').control-label.col-sm-3=__('Title')
      .col-sm-8
        input(type='text' name='title' value=movie.title required).form-control#inputMovieTitle
    .form-group
      label(for='inputMovieReleaseDate').control-label.col-sm-3=__('Release date')
      .col-sm-4.col-lg-3
        input(type='date' name='release_date' value=movie.release_date required pattern='^\\d{4}(-\\d{2}){2}$' placeholder=__('YYYY-MM-DD')).form-control#inputMovieReleaseDate
    .form-group
      label(for='inputMovieImage').control-label.col-sm-3=__('Image url')
      .col-sm-8
        input(type='url' name='image' value=movie.image required pattern='^https?:\\/\\/(\\w+:{0,1}\\w*@)?(\\S+)(:[0-9]+)?(\\/|\\/([\\w#!:.?+=&%@!\\-\\/]))?$').form-control#inputMovieImage

    .col-sm-10.col-sm-offset-1
      br
      h4=__('Optional fields')
      hr
    .form-group
      label(for='inputMovieProductionYear').control-label.col-sm-3=__('Production year')
      .col-sm-3
        input(type='number' name='production_year' value=(movie.production_year || currentYear) pattern='^[12]\\d{3}$' min='1888' max=currentYear placeholder='optional').form-control#inputMovieProductionYear
    .form-group
      label(for='inputMovieGender').control-label.col-sm-3=__('Gender(s)')
      .col-sm-8
        input(type='text' name='gender' value=movie.gender).form-control#inputMovieGender
        p.help-block=__('comma-separated')
    .form-group
      label(for='inputMovieDirector').control-label.col-sm-3=__('Director(s)')
      .col-sm-8
        input(type='text' name='director' value=movie.director).form-control#inputMovieDirector
        p.help-block=__('comma-separated')
    .form-group
      label(for='inputMovieProducer').control-label.col-sm-3=__('Producer(s)')
      .col-sm-8
        input(type='text' name='producer' value=movie.producer).form-control#inputMovieProducer
        p.help-block=__('comma-separated')
    .form-group
      label(for='inputMovieScriptwriter').control-label.col-sm-3=__('Scriptwriter(s)')
      .col-sm-8
        input(type='text' name='scriptwriter' value=movie.scriptwriter).form-control#inputMovieScriptwriter
        p.help-block=__('comma-separated')
    .form-group
      label(for='inputMovieDuration').control-label.col-sm-3=__('Duration')
      .col-sm-8
        input(type='text' name='duration' value=movie.duration pattern='^\\d{1,2}h[0-5]?\\d(m([0-5]?\\ds?)?)?$').form-control#inputMovieDuration
        p.help-block=__('Format: 12h34m56s. Seconds can be omitted')
    .form-group
      label(for='inputMovieActor').control-label.col-sm-3=__('Actor(s)')
      .col-sm-8
        input(type='text' name='actor' value=movie.actor).form-control#inputMovieActor
        p.help-block=__('comma-separated')
    .form-group
      label(for='inputMovieComposer').control-label.col-sm-3=__('Composer(s)')
      .col-sm-8
        input(type='text' name='composer' value=movie.composer).form-control#inputMovieComposer
        p.help-block=__('comma-separated')
    .form-group
      label(for='inputMoviePlot').control-label.col-sm-3=__('Plot')
      .col-sm-8
        textarea(rows='4' cols='30' name='plot' value=movie.plot).form-control#inputMoviePlot

    .col-sm-10.col-sm-offset-1
      br
      h4=__('Optional misc fields')
      hr
    .form-group
      label(for='inputMovieOriginalReleaseDate').control-label.col-sm-3=__('Original release date')
      .col-sm-8
        input(type='text' name='original_release_date' value=movie.original_release_date).form-control#inputMovieOriginalReleaseDate
    .form-group
      label(for='inputMovieOriginalTitle').control-label.col-sm-3=__('Original title')
      .col-sm-8
        input(type='text' name='original_title' value=movie.original_title).form-control#inputMovieOriginalTitle
    .form-group
      label(for='inputMovieOtherTitle').control-label.col-sm-3=__('Other title')
      .col-sm-8
        input(type='text' name='other_title' value=movie.other_title).form-control#inputMovieOtherTitle
    .form-group
      label(for='inputMovieInformations').control-label.col-sm-3=__('Other informations')
      .col-sm-8
        textarea(rows='3' cols='30' name='informations').form-control#inputMovieInformations
          =movie.informations
    .form-group(style='text-align: center')
      button(type='submit').btn.btn-default=__('Add movie')
