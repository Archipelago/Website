extends layout

block main
  h1(style='text-align: center') Add a movie
  form(method='post' action='/movie').form-horizontal.row
    .col-sm-10.col-sm-offset-1
      h4 Mandatory fields
      hr
    .form-group
      label(for='inputMovieTitle').control-label.col-sm-3 Title
      .col-sm-8
        input(type='text' name='title' required).form-control#inputMovieTitle
    .form-group
      label(for='inputMovieReleaseDate').control-label.col-sm-3 Release date
      .col-sm-4.col-lg-3
        input(type='date' name='release_date' required pattern='^\\d{4}(-\\d{2}){2}$' placeholder='YYYY-MM-DD').form-control#inputMovieReleaseDate
    .form-group
      label(for='inputMovieImage').control-label.col-sm-3 Image url
      .col-sm-8
        input(type='url' name='image' required pattern='^https?:\\/\\/(\\w+:{0,1}\\w*@)?(\\S+)(:[0-9]+)?(\\/|\\/([\\w#!:.?+=&%@!\\-\\/]))?$').form-control#inputMovieImage

    .col-sm-10.col-sm-offset-1
      br
      h4 Optional fields
      hr
    .form-group
      label(for='inputMovieProductionYear').control-label.col-sm-3 Production year
      .col-sm-3
        input(type='number' name='production_year' pattern='^[12]\\d{3}$' min='1888' value=currentYear max=currentYear placeholder='optional').form-control#inputMovieProductionYear
    .form-group
      label(for='inputMovieGender').control-label.col-sm-3 Gender(s)
      .col-sm-8
        input(type='type' name='gender').form-control#inputMovieGender
        p.help-block comma-separated
    .form-group
      label(for='inputMovieDirector').control-label.col-sm-3 Director(s)
      .col-sm-8
        input(type='type' name='director').form-control#inputMovieDirector
        p.help-block comma-separated
    .form-group
      label(for='inputMovieProducer').control-label.col-sm-3 Producer(s)
      .col-sm-8
        input(type='type' name='producer').form-control#inputMovieProducer
        p.help-block comma-separated
    .form-group
      label(for='inputMovieScriptwriter').control-label.col-sm-3 Scriptwriter(s)
      .col-sm-8
        input(type='type' name='scriptwriter').form-control#inputMovieScriptwriter
        p.help-block comma-separated
    .form-group
      label(for='inputMovieActor').control-label.col-sm-3 Actor(s)
      .col-sm-8
        input(type='type' name='actor').form-control#inputMovieActor
        p.help-block comma-separated
    .form-group
      label(for='inputMovieComposer').control-label.col-sm-3 Composer(s)
      .col-sm-8
        input(type='type' name='composer').form-control#inputMovieComposer
        p.help-block comma-separated
    .form-group
      label(for='inputMoviePlot').control-label.col-sm-3 Plot
      .col-sm-8
        textarea(rows='4' cols='30' name='plot').form-control#inputMoviePlot

    .col-sm-10.col-sm-offset-1
      br
      h4 Optional misc fields
      hr
    .form-group
      label(for='inputMovieOriginalReleaseDate').control-label.col-sm-3 Original release date
      .col-sm-8
        input(type='type' name='original_release_date').form-control#inputMovieOriginalReleaseDate
    .form-group
      label(for='inputMovieOriginalTitle').control-label.col-sm-3 Original title
      .col-sm-8
        input(type='type' name='original_title').form-control#inputMovieOriginalTitle
    .form-group
      label(for='inputMovieOtherTitle').control-label.col-sm-3 Other title
      .col-sm-8
        input(type='type' name='other_title').form-control#inputMovieOtherTitle
    .form-group
      label(for='inputMovieInformations').control-label.col-sm-3 Other informations
      .col-sm-8
        textarea(rows='3' cols='30' name='informations').form-control#inputMovieInformations
    .form-group(style='text-align: center')
      button(type='submit').btn.btn-default Add movie
