.row
  .col-md-3.col-md-offset-4
    h2 Login
form(action='/login' method='post').form-horizontal
  .form-group
    label(for='inputRegisterLogin').control-label.col-md-2 Login
    .col-md-6
      input(type='text' name='login' required).form-control#inputRegisterLogin
  .form-group
    label(for='inputRegisterPassword').control-label.col-md-2 Password
    .col-md-6
      input(type='password' name='password' required).form-control#inputRegisterPassword
  .form-group
    .col-md-offset-2.col-md-6
      button(type='submit').btn.btn-default Register