.row
  .col-sm-4.col-sm-offset-4
    h2=__('Register')
form(action='/register' method='post').form-horizontal.row
  .form-group
    label(for='inputRegisterLogin').control-label.col-sm-3=__('Login_field')
    .col-sm-8
      input(type='text' name='login' value=register.login required).form-control#inputRegisterLogin
  .form-group
    label(for='inputRegisterPassword').control-label.col-sm-3=__('Password')
    .col-sm-8
      input(type='password' name='password' value=register.password required).form-control#inputRegisterPassword
  .form-group
    label(for='inputRegisterEmail').control-label.col-sm-3=__('Email')
    .col-sm-8
      input(type='email' placeholder=__('optional') name='email' value=register.email).form-control#inputRegisterEmail
  .form-group
    label(for='inputRegisterBitmessage').control-label.col-sm-3=__('Bitmessage Address')
    .col-sm-8
      input(type='text' placeholder=__('optional') name='bm' value=register.bm pattern='^(BM-)?[a-zA-Z0-9]{32,34}$' title=__('Valid bitmessage address, with or without "BM-" prefix')).form-control#inputRegisterBitmessage
  .form-group
    .col-sm-offset-3.col-sm-8
      button(type='submit').btn.btn-default=__('Register')